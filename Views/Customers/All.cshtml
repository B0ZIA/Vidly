@model Vidly.ViewModels.AllCustomersViewModel
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Customers</h2>

@if (Model.Customers.Count == 0)
{
    <text>We do not have customers yet...</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                string link = "/Customers/" + customer.Id;

                <tr>
                    <td><a href=@link>@customer.Name</a></td>
                    <td>@customer.MembershipType.Name</td>
                </tr>
            }
        </tbody>
    </table>
}